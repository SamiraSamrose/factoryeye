# Google Cloud Project Configuration
PROJECT_ID=your-gcp-project-id
REGION=europe-west1
GOOGLE_APPLICATION_CREDENTIALS=./credentials.json

# Pub/Sub Configuration
PUBSUB_TOPIC=iot-sensor-data
PUBSUB_SUBSCRIPTION=sensor-data-sub
PUBSUB_MAX_MESSAGES=100
PUBSUB_ACK_DEADLINE=300

# BigQuery Configuration
BIGQUERY_DATASET=factoryeye
BIGQUERY_TABLE_READINGS=sensor_readings
BIGQUERY_TABLE_ANOMALIES=anomalies
BIGQUERY_TABLE_PREDICTIONS=predictions
BIGQUERY_TABLE_METRICS=efficiency_metrics

# Firestore Configuration
FIRESTORE_COLLECTION=sensor_configs
FIRESTORE_ALERTS_COLLECTION=alert_rules

# Cloud Storage Configuration
STORAGE_BUCKET=factoryeye-reports
STORAGE_REPORTS_PATH=reports/
STORAGE_VISUALIZATIONS_PATH=visualizations/

# AI Model Configuration
GEMMA_MODEL_ID=gemma-7b-it
GEMINI_MODEL_ID=gemini-1.5-pro
IMAGEN_MODEL_ID=imagen-3.0-generate-001

# Application Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
WORKERS=4

# Agent Configuration
ANOMALY_THRESHOLD=0.85
PREDICTION_WINDOW_HOURS=168
ANALYSIS_BATCH_SIZE=1000

# Frontend Configuration
WS_RECONNECT_INTERVAL=5000
CHART_UPDATE_INTERVAL=1000
DASHBOARD_REFRESH_RATE=5000
